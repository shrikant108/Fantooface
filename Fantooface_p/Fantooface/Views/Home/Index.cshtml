<script type="text/javascript">
    jQuery(document).ready(function () {
        App.init();
        Login.init();
    });
    function fnShowhide() {
       
        document.getElementById("frmsignup").style.display = '';
        document.getElementById("frmlgn").style.display = 'none';
        document.getElementById("frmforg").style.display = 'none';
    }
    function fnShowhideBack() {

        document.getElementById("frmsignup").style.display = 'none';
        document.getElementById("frmlgn").style.display = '';
        document.getElementById("frmforg").style.display = '';
    }
	</script>
