<body class="login">
    <div class="logo">
	<h1 class="form-title" style="color:white;font-family:bold;">
		Fantooface
		</h1>
	
</div>
<div class="content" data-ng-controller="LoginController">
	<form class="login-form" action="#" method="post" id="frmlgn" >
   
		<h3 class="form-title">Enter your email address and password below.</h3>
        <div id="dv" class="alert alert-danger" style="display:none;"><button class="close" data-close="alert"></button>
			<span>
				Please recheck your login.
			</span></div>

		<div id="dvalert" class="alert alert-danger display-hide">
			<button class="close" data-close="alert"></button>
			<span>
				Please recheck your login.
			</span>
		</div>
      <span id="test"></span>
       
        <table id="Login1" cellspacing="0" cellpadding="0" style="border-collapse:collapse;">
	<tr>
		<td>

       <div class="notregister" style="color:Red;padding-bottom:5px;"><span id="Login1_FailureText"></span></div>
		<div class="form-group">
			<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
			<label class="control-label visible-ie8 visible-ie9">Email Address</label>
			<div class="input-icon">
				<i class="fa fa-user"></i> 
                <input name="Login1$UserName" type="text" id="Login1_UserName" class="form-control placeholder-no-fix" 
                    placeholder="Email Address" name="username" style="width:300px;" data-ng-model="Login.Username" />
                <span id="spnemail" style="display:none;color:#b94a48;margin-top:5px;">Your email address is required.</span>
               </div>
		</div>
		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9">Password</label>
			<div class="input-icon">
				<i class="fa fa-lock"></i>
                <input name="Login1$Password" type="password" id="Login1_Password" data-ng-model="Login.Password" class="form-control placeholder-no-fix" placeholder="Password" 
                    name="Password" style="width:300px;" />
				<span id="spnpwd" style="display:none;color:#b94a48;margin-top:5px;">Your password is required.</span>
			</div>
		</div>
		<div class="form-actions" style="">
        <div class="btn blue pull-left">
        <button type="button"   class="btn blue pull-right" onclick="fnShowhide()" > Signup <i class="m-icon-swapright m-icon-white"></i></button>
		</div>
        <div class="btn blue pull-right">
        <button type="button"   class="btn blue pull-right" data-ng-click="Login()" > Log In <i class="m-icon-swapright m-icon-white"></i></button>
		</div>
            </div>
         </td>
	</tr>
</table>

        <div class="forget-password">
		  <h4>Forgot your password?</h4>
			<p><a href="javascript:;" id="forget-password">Click here</a>
				 to reset your password.
			</p>
		</div>
       
     		
	</form>
	<form class="forget-form" action="#" method="post" id="frmforg">
		<h3>Reset Your Password</h3>
		<p>
			 Enter your email address below and we'll get you moving along. After submitting, please check your email including spam/bulk accounts.
		</p>
		<div class="form-group">
			<div class="input-icon">
				<i class="fa fa-envelope"></i>
				<input id="txtemail" class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="" name="email"/>
			<span id="spnForgtmail" style="display:none;color:#a94442;">Your email address is required.</span>
            </div>
		</div>
		<div class="form-actions">
			<button type="button" id="back-btn" class="btn">
			<i class="m-icon-swapleft"></i> Back </button>
      
			<button id="btnreset" type="button" class="btn blue pull-right" >
			Reset <i class="m-icon-swapright m-icon-white"></i>
			</button>
		</div>
	</form>
	<form class="forget-signup" action="#" method="post" id="frmsignup" style="display:none;">
		<h3>Signup</h3>		
		<div class="form-group">
			<div class="input-icon">
				<i class="fa fa-envelope"></i>
				<input  class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="First Name" data-ng-model="signup.Firstname" name="firstname"/>
			<span  style="display:none;color:#a94442;">Your firstname is required.</span>
            </div>
            </div>
        <div class="form-group">
            <div class="input-icon">
				<i class="fa fa-envelope"></i>
				<input  class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Last Name" data-ng-model="signup.Lastname" name="Lastname"/>
			<span  style="display:none;color:#a94442;">Your lastname is required.</span>
            </div>
		</div>
        <div class="form-group">
            <div class="input-icon">
				<i class="fa fa-envelope"></i>
				<input  class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" data-ng-model="signup.Email" name="email"/>
			<span  style="display:none;color:#a94442;">Your email is required.</span>
            </div>
		</div>
        <div class="form-group">
            <div class="input-icon">
				<i class="fa fa-envelope"></i>
				<input  class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Display Name" data-ng-model="signup.Displayname" name="Displayname"/>
			<span  style="display:none;color:#a94442;">Your displayname is required.</span>
            </div>
		</div>
         <div class="form-group">
            <div class="input-icon">
				<i class="fa fa-envelope"></i>
				<input  class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="User Name" data-ng-model="signup.Username" name="Username"/>
			<span  style="display:none;color:#a94442;">Your username is required.</span>
            </div>
		</div>
        <div class="form-group">
            <div class="input-icon">
				<i class="fa fa-envelope"></i>
				<input  class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Password" data-ng-model="signup.Password" name="Password"/>
			<span  style="display:none;color:#a94442;">Your Password is required.</span>
            </div>
		</div>
		<div class="form-actions">
			<button type="button"  class="btn" onclick="fnShowhideBack()">
			<i class="m-icon-swapleft"></i> Back </button>
      
			<button type="button" class="btn blue pull-right" >
			Reset <i class="m-icon-swapright m-icon-white"></i>
			</button>
		</div>
	</form>
</div>
